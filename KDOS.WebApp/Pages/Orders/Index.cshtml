@page
@model KDOS.WebApp.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>
@if (TempData["Message"] != null)
{
    <h2 class="text-info">@TempData["Message"]</h2>
}
<form method="get">
    <div class="form-row">
          <div class="col">
              <input type="text" name="SearchShippingMethod" placeholder="Search ShippingMethod" value="@Model.SearchShippingMethod" class="form-control" />
          </div>
        <div class="col">
            <input type="text" name="SearchStatus" placeholder="Search Status" value="@Model.SearchStatus" class="form-control" />
        </div>
        <div class="col">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New
    </a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].PriceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OriginalLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShippingMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].TotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Order) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.PriceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginalLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price.Id)
            </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">
                        <i class="fas fa-edit"></i> Edit
                    </a> 
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">
                        <i class="fas fa-info-circle"></i> Details
                    </a> 
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.Id">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                 </td>
                

        </tr>
}
    </tbody>
</table>
